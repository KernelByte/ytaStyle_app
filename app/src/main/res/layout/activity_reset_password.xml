<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ResetPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
       >

        <Button
            android:id="@+id/bt_atrasReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VOLVER A INICIAR SESION"
            android:background="@drawable/round_corner_buttom_final"
            android:drawableLeft="@drawable/ic_back"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="@string/olvido_su_contrase_a"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_margin="17dp"
            android:textColor="@color/material_dynamic_neutral20"
            android:textSize="17sp"
            android:fontFamily="@font/roboto_light"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/mensaje_recordar" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_layout_outlined"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="20dp"
            android:paddingEnd="10dp"
            android:textSize="17sp"
            android:layout_marginBottom="20dp"
            android:hint="Ingrese su correo electronico"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextOutlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_margin="10dp"
            android:background="@drawable/round_corner_buttom"
            android:text="Restablecer contraseÃ±a" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>